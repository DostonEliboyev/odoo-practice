<odoo>
  <data>
   <record id="view_uicecommerce_category_list" model="ir.ui.view">
        <field name="name">uicecommerce.category.list</field>
        <field name="model">uicecommerce.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="productsCount"/>
            </list>
        </field>
    </record>

    <record id="view_uicecommerce_category_form" model="ir.ui.view">
        <field name="name">uicecommerce.category.form</field>
        <field name="model">uicecommerce.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="productsCount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_uicecommerce_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">uicecommerce.category</field>
        <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
