<odoo>
  <data>
     <record id="view_uicecommerce_product_list" model="ir.ui.view">
        <field name="name">uicecommerce.product.list</field>
        <field name="model">uicecommerce.product</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="slug"/>
                <field name="salesprice"/>
                <field name="price"/>
                <field name="size"/>
                <field name="length"/>
                <field name="width"/>
                <field name="height"/>
                <field name="percentage"/>
            </list>
        </field>
    </record>

    <record id="view_uicecommerce_product_form" model="ir.ui.view">
        <field name="name">uicecommerce.product.form</field>
        <field name="model">uicecommerce.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Basic">
                        <field name="name"/>
                        <field name="slug"/>
                        <field name="category_id"/>

                        <field name="salesprice"/>
                        <field name="price"/>
                        <field name="percentage"/>
                    </group>
                    <group string="Dimensions / Size">
                        <field name="length"/>
                        <field name="width"/>
                        <field name="height"/>
                        <field name="size"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_uicecommerce_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">uicecommerce.product</field>
        <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
