<odoo>
  <data>
     <record id="view_uicecommerce_order_list" model="ir.ui.view">
        <field name="name">uicecommerce.order.list</field>
        <field name="model">uicecommerce.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer"/>
                <field name="delivery_date"/>
                <field name="delivery_product_count"/>
            </list>
        </field>
    </record>

    <record id="view_uicecommerce_order_form" model="ir.ui.view">
        <field name="name">uicecommerce.order.form</field>
        <field name="model">uicecommerce.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer"/>
                        <field name="delivery_date"/>
                        <field name="delivery_product_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_uicecommerce_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">uicecommerce.order</field>
        <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>
