<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.list</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialty"/>
                <field name="workschedule"/>
                <field name="cabinetnumber"/>
                <field name="licensenumber"/>
            </list>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialty"/>
                    </group>
                    <group>
                        <field name="workschedule"/>
                        <field name="cabinetnumber"/>
                        <field name="licensenumber"/>
                        <field name="patient"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
